#:kivy 2.3.0
#:import random random

<RandomDev>:
    orientation: "vertical"
    padding: dp(20), dp(10)
    canvas:
        Color:
            rgba: 1, 0, 1, 1

    Label:
        text: "Random_Devotion_Time"
        text_size: root.width, None
        font_size: 60
        halign: 'center'
        size: self.texture_size
        size_hint_y: .2
        padding: 10, 5
        id: banner

    Label:
        id: scripture_label
        text: 'None'
        pos_hint: {'center': 1}
        text_size: self.size
        color: (0, 1, 1, 1)




    BoxLayout:
        padding: dp(30), dp(100)
        orientation: "vertical"
        Label:
            text: "Here is some text"
        Button:
            text: "Tap to get a New Bible Verse"
            on_press: root.get_random_scripture()
            on_release: scripture_label.text = root.chosen_verse
            background_color: (0, .5, 1, 1)
            size: 100, 500






